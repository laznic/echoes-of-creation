---

<div class="w-80 h-80 relative shrink-0">
  <div class="relative"  style="mask: url(#hole);">
    <div class="glow bg-sky-700 absolute z-10 w-full h-full top-0 left-0 mix-blend-difference backdrop-blur-sm" style="mask: url(#glow);" />
    <img src="https://picsum.photos/320/320" class="w-full h-full" />
  
    <svg
    class="absolute top-0 left-0"
    width="320"
    height="320"
    viewBox="0 0 320 320"
    xmlns="http://www.w3.org/2000/svg"
    >
    <defs>
      <radialGradient id="holeGradient">
        <stop offset="95%" stop-color="black" />
        <stop offset="100%" stop-color="white" />
      </radialGradient>
  
      <radialGradient id="glowGradient">
        <stop offset="90%" stop-color="white " />
        <stop offset="100%" stop-color="black" />
      </radialGradient>
  
      <filter id="filter">
        <feTurbulence
          type="fractalNoise"
          numOctaves="0.5"
          baseFrequency="0.03"
          result="turbulence"
        />
  
        <feDisplacementMap in="SourceGraphic" in2="turbulence" scale="20" />
      </filter>
  
      <filter id="filter3">
        <feGaussianBlur in="SourceGraphic" stdDeviation="10" />
        <feTurbulence
          type="fractalNoise"
          numOctaves="5"
          result="turbulence"
        >
          <animate
            attributeName="baseFrequency"
            values="0.02;0.05;0.02"
            dur="5s"
            repeatCount="indefinite"
          />
        </feTurbulence>
        <feDisplacementMap in="SourceGraphic" in2="turbulence" scale="20" />
      </filter>
    </defs>
  
  
    <mask id="hole">
      <rect width={"100%"} height={"100%"} fill="white" />
      <circle
        cx="120"
        cy="120"
        r="50"
        filter="url(#filter)"
        fill="url(#holeGradient)"
      >
        <animate
          attributeName="r"
          values="0;320;0"
          dur="15s"
          repeatCount="indefinite"
        />
      </circle>
    </mask>
  
    <mask id="glow">
      <circle
        cx="120"
        cy="120"
        r="50"
        fill="url(#glowGradient)"
        filter="url(#filter)"
      >
        <animate
          attributeName="cx"
          values="120;125;115;120"
          dur="12s"
          repeatCount="indefinite"
        />

        <animate
          attributeName="cy"
          values="120;115;125;120"
          dur="12s"
          repeatCount="indefinite"
          />

        <animate
          attributeName="r"
          values="0;345;0"
          dur="15s"
          repeatCount="indefinite"
        />
      </circle>
    </mask>
  </svg>
  
  </div>
  <img src="https://picsum.photos/330/330" class="absolute top-0 left-0 w-full h-full -z-10" />
</div>