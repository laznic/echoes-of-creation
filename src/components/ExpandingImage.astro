<div class="expanding-image fixed top-0 left-0 w-full h-[100dvh] z-10 grid content-center items-center">
  <div class="pointer-events-none bg-neutral-100 absolute z-10 w-full h-full mix-blend-color-dodge backdrop-blur-lg top-0" style="mask: url(#hole);" />
  <div  class="pointer-events-none absolute z-10 w-full h-full mix-blend-color-dodge backdrop-blur-lg top-0 grid content-center items-center justify-center"  style="mask: url(#glow);">
    <img src="https://picsum.photos/800/600" class="actual-expanding-image -z-10 h-full w-full object-cover self-center" />
  </div>

  <svg
    class="overflow-visible absolute"
    width="100%"
    height="100%"
    viewBox={`0 0 240 240`}
    xmlns="http://www.w3.org/2000/svg"
    >
    <defs>
      <radialGradient id="holeGradient">
        <stop offset="75%" stop-color="black" />
        <stop offset="100%" stop-color="white" />
      </radialGradient>

      <radialGradient id="glowGradient">
        <stop offset="90%" stop-color="white" />
        <stop offset="100%" stop-color="black" />
      </radialGradient>

      <filter id="filter">
        <feTurbulence
          type="fractalNoise"
          numOctaves="1"
          baseFrequency="0.03"
          result="turbulence"
        />

        <feDisplacementMap in="SourceGraphic" in2="turbulence" scale="20" />
      </filter>
    </defs>

    <mask id="glow">
      <circle
        class="glow-circle"
        r="10"
        fill="url(#glowGradient)"
        filter="url(#filter)"
      />
    </mask>
    
    <mask id="hole">
      <circle
        class="hole-circle"
        r="15"
        fill="url(#holeGradient)"
        filter="url(#filter)"
      />
    </mask>
  </svg>
</div>