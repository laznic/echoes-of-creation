<div class="w-[100vw] h-[100dvh] shrink-0 z-10 grid content-center justify-center">

  <div class="relative">
    <div class="pointer-events-none bg-sky-500 absolute z-10 w-full h-full mix-blend-color-dodge backdrop-blur-lg top-0" style="mask: url(#hole);" />
    <img src="https://picsum.photos/1400/1400" class="pointer-events-none object-cover absolute top-0 left-0 w-full h-full -z-10" style="mask: url(#glow);" />
    <!-- <div class="absolute z-10 w-full h-full" style="mask: url(#glow);" /> -->
    <!-- <img src="https://picsum.photos/320/320" class="w-full h-full absolute top-1/3 mx-auto left-0 right-0" style="mask: url(#hole);" /> -->
    <svg
      width="100vw"
      height="100dvh"
      viewBox={`0 0 240 240`}
      xmlns="http://www.w3.org/2000/svg"
      >
      <defs>
        <radialGradient id="holeGradient">
          <stop offset="75%" stop-color="black" />
          <stop offset="100%" stop-color="white" />
        </radialGradient>
    
        <radialGradient id="glowGradient">
          <stop offset="90%" stop-color="white" />
          <stop offset="100%" stop-color="black" />
        </radialGradient>
    
        <filter id="filter">
          <feTurbulence
            type="fractalNoise"
            numOctaves="1"
            baseFrequency="0.03"
            result="turbulence"
          />
    
          <feDisplacementMap in="SourceGraphic" in2="turbulence" scale="20" />
        </filter>
    
          <feDisplacementMap in="SourceGraphic" in2="turbulence" scale="5">
            <animate
              attributeName="scale"
              values="5;10;5"
              dur="5s"
              repeatCount="indefinite"
            />
          </feDisplacementMap>
        </filter>
    
        <filter id="filter3">
          <feGaussianBlur in="SourceGraphic" stdDeviation="10" />
          <feTurbulence
            type="fractalNoise"
            numOctaves="5"
            result="turbulence"
          >
            <animate
              attributeName="baseFrequency"
              values="0.02;0.05;0.02"
              dur="5s"
              repeatCount="indefinite"
            />
          </feTurbulence>
          <feDisplacementMap in="SourceGraphic" in2="turbulence" scale="20" />
        </filter>
      </defs>
    
      <mask id="glow">
        <circle
          class="glow-circle"
          cx="323%"
          cy="295%"
          r="10"
          fill="url(#glowGradient)"
          filter="url(#filter)"
        />
      </mask>
      
      <mask id="hole">
        <circle
          class="hole-circle"
          cx="323%"
          cy="295%"
          r="15"
          fill="url(#holeGradient)"
          filter="url(#filter)"
        />
      </mask>
    </svg>
  
  </div>
</div>